generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(PLAYER)
  eventId   String?
  event     Event?   @relation("EventUsers", fields: [eventId], references: [id])
  createdAt DateTime @default(now())
}

enum Role {
  PLAYER
  LEADER
  SUBLEADER
}


model Event {
  id         String   @id @default(uuid())
  name       String
  type       EventType
  createdAt  DateTime @default(now())
  createdBy  String
  users      User[]   @relation("EventUsers")
}

enum EventType {
  GAME
  CHAMPIONSHIP
}
